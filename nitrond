		*)
			printn -e "Unknown Option  $@"
			__magicn_help
			;;
	esac
}

updaten() {
	printn -n "checking connectivity..."
	[[ "$(getprop ro.nitron.forcecheckupdate)" == "no" ]] && {
		printn -e "aborted from system variable"
		echo "[$(date +%I:%M:%S)] $0: ${arg#*}: ro.nitron.forcecheckupdate == $(getprop ro.nitron.forcecheckupdate)" >>$NITRON_LOG_DIR/nitron.log
		return 1
	}
	[[ "$NITRON_FORCECHECK_UPDATE" == "false" ]] && {
		printn -e "aborted from system variable"
		echo "[$(date +%I:%M:%S)] $0: ${arg#*}: NITRON_FORCECHECK_UPDATE == ${NITRON_FORCECHECK_UPDATE}" >>$NITRON_LOG_DIR/nitron.log
		return 1
	} || echo "[$(date +%I:%M:%S)] $0: ${arg#*}: pinging 8.8.8.8 ..." >>$NITRON_LOG_DIR/nitron.log
	[[ "$(ping -c1 "8.8.8.8" >/dev/null && echo $?)" == "0" ]] || echo "[$(date +%I:%M:%S)] $0: ${arg#*}: failed" >>$NITRON_LOG_DIR/nitron.log && {
		printn -i "looking for update..."
		curl -o "/cache/nitrond_src_cache" "https://raw.githubusercontent.com/UsiFX/OpenNitroN/main/nitrond" 2>/dev/null
		cp "$0" "/cache/nitrond_current"
		[[ "$(diff "/cache/nitrond_current" "/cache/nitrond_src_cache")" ]] && {
			printn -i "updating..."
			cat "/cache/nitrond_src_cache" >$0
			printn -n "updated successfully."
		} || printn -n "up to date."
	}
}

# Bail out if we aren't running as SU
[[ "$(id -u)" -ne "0" ]] && {
	printn -e "Please run the script as SU"
	exit 1
}

[[ "$(grep -nr "androidboot" /proc/cmdline)" ]] && {
	echo "[$(date +%I:%M:%S)] $0: working in android platform, using resetprop algorithm..." >>$NITRON_LOG_DIR/nitron.log
	resetprop ro.nitron.version 0.7.2
} || {
	echo "[$(date +%I:%M:%S)] $0: working in Unknown Linux platform, using export algorithm..." >>$NITRON_LOG_DIR/nitron.log
	export NITRON_FORCECHECK_UPDATE
	export NITRON_VERSION='0.7.2'
}
[[ ! "$(getprop ro.nitron.version)" ]] && {
	echo "[$(date +%I:%M:%S)] $0: we are working on first use, Supplying initial mode..." >>$NITRON_LOG_DIR/nitron.log
	resetprop ro.nitron.mode default
} || [[ ! -e "$NITRON_MODE" ]] && {
	echo "[$(date +%I:%M:%S)] $0: we are working on first use, Supplying initial mode..." >>$NITRON_LOG_DIR/nitron.log
	export NITRON_MODE='default'
}

__nitron_help() {
	echo "
Usage: nitron [-sg] [-sr] [-sy] [-h] [-v]

Options:
  -sg, --set-green ~ apply Battery mode
  -sr, --set-red ~ apply Gaming mode
  -sy, --set-yellow ~ apply Balanced mode
  -sdm, --show-default-mode ~ prints current tweaking mode
  -u, --update ~ force update to latest
  -h, --help ~ shows this Help menu
  -v, --version ~ shows tool version
  -d, --debug ~ run any command under debug flag
"
}

[[ $# -eq "0" ]] && {
	tty -s
	__nitron_help
} || {
	case $@ in
		"-sg" | "--set-green")
			magicn -g
			[[ "$(grep -nr "androidboot" /proc/cmdline)" ]] && printn -n "$0: current mode set to: $(getprop ro.nitron.mode)" || printn -n "$0: current mode set to: $NITRON_MODE"
			;;
		"-sr" | "--set-red")
			magicn -r
			[[ "$(grep -nr "androidboot" /proc/cmdline)" ]] && printn -n "$0: current mode set to: $(getprop ro.nitron.mode)" || printn -n "$0: current mode set to: $NITRON_MODE"
			;;
		"-sy" | "--set-yellow")
			magicn -y
			[[ "$(grep -nr "androidboot" /proc/cmdline)" ]] && printn -n "$0: current mode set to: $(getprop ro.nitron.mode)" || printn -n "$0: current mode set to: $NITRON_MODE"
			;;
		"-sdm" | "--show-default-mode")
			[[ "$(grep -nr "androidboot" /proc/cmdline)" ]] && echo -e "$0: mode: $(getprop ro.nitron.mode)" || echo -e "$0: mode: $NITRON_MODE"
			;;
		"-v" | "--version")
			[[ "$(grep -nr "androidboot" /proc/cmdline)" ]] && echo -e "nitrond $(getprop ro.nitron.version)" || echo -e "nitrond $NITRON_VERSION"
			;;
		"-c" | "--console-mode")
			! hash dialog 2>/dev/null && {
				echo "[$(date +%I:%M:%S)] $0: dialog not found, switch: console_legacy()" >>$NITRON_LOG_DIR/nitron.log
				console_legacy
			} || {
				console_dialog
				echo "[$(date +%I:%M:%S)] $0: console_dialog(): started" >>$NITRON_LOG_DIR/nitron.log
			}
			;;
		"-h" | "--help") __nitron_help ;;
		"-u" | "--update") updaten ;;
		*)
			printn -e "Unknown Option  $@"
			__nitron_help
			;;
	esac
}
