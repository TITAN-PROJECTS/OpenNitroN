		writen /dev/stune/top-app/schedtune.util.min.effective 0
		writen /dev/stune/top-app/schedtune.util.max 1024
		writen /dev/stune/top-app/schedtune.util.min 0
		writen /dev/stune/top-app/schedtune.boost 0
