### Local Variables

# \e colors
BLUE='\e[1;34m'
GREEN='\e[1;32m'
PURPLE='\e[1;35m'
CYAN='\e[1;36m'
RED='\e[1;31m'
WHITE='\e[1;37m'
YELLOW='\e[01;33m'

NITRON_LOG_DIR='/cache'
PROMPT_COMMAND='sync'

### Debugging
set -x


### Funcs
printn()
{
  while getopts ":n:e:w:i:" printn_opts; do
    case "${printn_opts}" in
      n) printf "[*] $2" ;;
      e) printf "[Ã—] $2"; return 1 ;;
      w) printf "[!] $2" ;;
      i) printf "[i] $2" ;;
    esac
  done
}
